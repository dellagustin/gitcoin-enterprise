{
  "name": "server",
  "version": "0.0.1",
  "description": "",
  "author": "Michael Spengler",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.build.json",
    "compress": "npx gzipper --verbose ./docs",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "npm run setup && ts-node -r tsconfig-paths/register src/gitcoin-enterprise-server.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^6.11.7",
    "@nestjs/core": "^6.11.7",
    "@nestjs/passport": "^6.1.1",
    "@nestjs/platform-express": "^6.11.7",
    "@octokit/rest": "^16.43.1",
    "axios": "^0.19.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "fs-sync": "^1.0.6",
    "github-oauth": "^0.2.2",
    "gzipper": "^3.5.0",
    "moment": "^2.24.0",
    "nodemailer": "^6.4.2",
    "passport": "^0.4.1",
    "passport-github2": "^0.1.11",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4",
    "shelljs": "^0.8.3",
    "telebot": "^1.2.6",
    "tunnel": "0.0.6",
    "uuidv1": "^1.6.14"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.11.7",
    "@types/express": "^4.17.2",
    "@types/jest": "^25.1.2",
    "@types/node": "^13.7.2",
    "@types/supertest": "^2.0.8",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.0.0",
    "typescript": "^3.7.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
